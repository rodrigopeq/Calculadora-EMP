<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/campoIdade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Idade"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <EditText
            android:id="@+id/campoAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Altura"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <EditText
            android:id="@+id/campoPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Peso"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <EditText
            android:id="@+id/campoAlturaPai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Altura do pai"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <EditText
            android:id="@+id/campoAlturaMae"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Altura da MÃ£e"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbtnFeminino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Feminino" />

            <RadioButton
                android:id="@+id/rbtnMasculino"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Masculino" />

        </RadioGroup>

        <Button
            android:id="@+id/btnCalcular"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:text="Calcular" />

        <LinearLayout
            android:id="@+id/layoutResul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Resultado:"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/txtResultadoIn"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="65dp"
                android:paddingLeft="30dp"
                android:text="00 In"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtOu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="65dp"
                android:paddingLeft="45dp"
                android:text="ou"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txtResultadoCm"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="65dp"
                android:paddingLeft="28dp"
                android:text="00 cm"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>